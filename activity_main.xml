<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f2d0"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/contacthelpline"
        android:layout_width="330dp"
        android:layout_height="82dp"
        android:background="#aaccff"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.248" />

    <ImageView
        android:id="@+id/notification"
        android:layout_width="330dp"
        android:layout_height="82dp"
        android:background="#ffff99"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <ImageView
        android:id="@+id/confirmationPatients"
        android:layout_width="330dp"
        android:layout_height="82dp"
        android:background="#aadd44"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811" />

    <ImageView
        android:id="@+id/hospitalDashboard"
        android:layout_width="330dp"
        android:layout_height="82dp"


        android:background="#ffb6c1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611" />

    <TextView
        android:id="@+id/myDB"
        android:layout_width="233dp"
        android:layout_height="55dp"
        android:text="My Dashboard"
        android:textColor="#11aaff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="@+id/dash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <ImageView
        android:id="@+id/dash"
        android:layout_width="42dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/contactText"
        android:layout_width="305dp"
        android:layout_height="66dp"
        android:text="Contact and HelpLine Information"
        android:textAlignment="center"
        android:textColor="#0000cd"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/contacthelpline"
        app:layout_constraintEnd_toEndOf="@+id/contacthelpline"
        app:layout_constraintStart_toStartOf="@+id/contacthelpline"
        app:layout_constraintTop_toTopOf="@+id/contacthelpline" />

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="305dp"
        android:layout_height="66dp"
        android:text="Notification and Advisory from Government "
        android:textAlignment="center"
        android:textColor="#0000cd"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notification"
        app:layout_constraintEnd_toEndOf="@+id/notification"
        app:layout_constraintStart_toStartOf="@+id/notification"
        app:layout_constraintTop_toTopOf="@+id/notification" />

    <TextView
        android:id="@+id/hospitaldashText"
        android:layout_width="305dp"
        android:layout_height="66dp"
        android:text="Hospital Dashboard"
        android:textAlignment="center"
        android:textColor="#0000cd"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/confirmationPatients"
        app:layout_constraintEnd_toEndOf="@+id/confirmationPatients"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirmationPatients"
        app:layout_constraintTop_toTopOf="@+id/confirmationPatients"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/confirmationText"
        android:layout_width="315dp"
        android:layout_height="88dp"
        android:text="Confirmation of daily sample tests"
        android:textAlignment="center"
        android:textColor="#0000cd"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/hospitalDashboard"
        app:layout_constraintEnd_toEndOf="@+id/hospitalDashboard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hospitalDashboard"
        app:layout_constraintTop_toTopOf="@+id/hospitalDashboard"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>